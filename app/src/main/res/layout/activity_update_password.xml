<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="@color/red3">

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="35dp"
            android:layout_height="38dp"
            android:layout_marginTop="32dp"
            android:padding="10dp"
            android:scaleType="fitXY"
            android:src="@mipmap/img_back" />

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="40dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:text="设置密码"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <ImageView
            android:id="@+id/imgSearch"
            android:layout_width="40dp"
            android:layout_height="38dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="32dp"
            android:padding="10dp"
            android:scaleType="fitXY"
            android:src="@mipmap/img_search"
            android:visibility="gone" />
    </RelativeLayout>


    <EditText
        android:id="@+id/etOldPwd"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white"
        android:gravity="left|center_vertical"
        android:hint="请输入旧密码"
        style="@style/text_14"
        android:inputType="textPassword"
        android:paddingLeft="@dimen/dip_20"
        android:paddingRight="@dimen/dip_20" />

    <EditText
        android:id="@+id/etNetPwd"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/adaptive_1dp"
        android:background="@color/white"
        android:gravity="left|center_vertical"
        style="@style/text_14"
        android:hint="请输入新密码"
        android:inputType="textPassword"
        android:paddingLeft="@dimen/dip_20"
        android:paddingRight="@dimen/dip_20" />

    <EditText
        android:id="@+id/etConfirmPwd"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/adaptive_1dp"
        android:background="@color/white"
        android:gravity="left|center_vertical"
        style="@style/text_14"
        android:hint="请确认新密码"
        android:inputType="textPassword"
        android:paddingLeft="@dimen/dip_20"
        android:paddingRight="@dimen/dip_20" />

    <TextView
        android:id="@+id/tvSubmit"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_height="@dimen/adaptive_46dp"
        style="@style/btn_click_red"
        android:text="确认修改"/>

</LinearLayout>