<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:paddingLeft="@dimen/dip_12"
    android:paddingRight="@dimen/dip_12"
    android:paddingTop="@dimen/dip_5"
    android:paddingBottom="@dimen/dip_5">

    <ImageView
        android:id="@+id/image"
        android:layout_width="110dp"
        android:layout_height="75dp"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@mipmap/image_loading"
        />

    <TextView
        android:id="@+id/tv_title"
        style="@style/text_14"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/image"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dip_6"
        android:layout_marginLeft="@dimen/dip_6"
        android:ellipsize="end"
        android:lines="2"
        />

    <TextView
        android:id="@+id/tv_content"
        style="@style/text_12_grey"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/tv_title"
        app:layout_constraintBottom_toBottomOf="@+id/image"
        android:layout_marginBottom="@dimen/dip_6"
        app:layout_constraintRight_toRightOf="parent"
        android:ellipsize="end"
        android:lines="1"/>

    <View
        android:id="@+id/underline"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_1"
        app:layout_constraintTop_toBottomOf="@+id/image"
        android:background="@color/background"
        android:layout_marginTop="@dimen/dip_5"/>

    <TextView
        android:id="@+id/tv_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dip_5"
        android:lines="1"
        android:ellipsize="end"
        style="@style/text_14"
        app:layout_constraintTop_toBottomOf="@+id/underline"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="@dimen/dip_3"/>



</android.support.constraint.ConstraintLayout>