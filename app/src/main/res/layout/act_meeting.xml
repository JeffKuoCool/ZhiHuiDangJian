<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="@color/red3">

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="35dp"
            android:layout_height="38dp"
            android:layout_marginTop="32dp"
            android:padding="10dp"
            android:scaleType="fitXY"
            android:src="@mipmap/img_back" />

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="40dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:text="会议连线"
            android:textColor="@color/white"
            android:textSize="15dp"
            />

    </RelativeLayout>


    <android.support.v7.widget.CardView
        android:id="@+id/relAddMeet"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:cardCornerRadius="@dimen/dip_8"
        app:cardBackgroundColor="#FFD700"
        android:layout_marginLeft="@dimen/dip_12"
        android:layout_marginRight="@dimen/dip_12"
        android:layout_marginTop="@dimen/dip_60"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_16_white"
            android:layout_gravity="center"
            android:text="创建会议"/>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/relJoinMeet"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:cardCornerRadius="@dimen/dip_8"
        app:cardBackgroundColor="#1E90FF"
        android:layout_marginLeft="@dimen/dip_12"
        android:layout_marginRight="@dimen/dip_12"
        android:layout_marginTop="@dimen/dip_25"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_16_white"
            android:layout_gravity="center"
            android:text="会议中心"/>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/viewChat"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:cardCornerRadius="@dimen/dip_8"
        app:cardBackgroundColor="#F08713"
        android:layout_marginLeft="@dimen/dip_12"
        android:layout_marginRight="@dimen/dip_12"
        android:layout_marginTop="@dimen/dip_25"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_16_white"
            android:layout_gravity="center"
            android:text="在线交流"/>

    </android.support.v7.widget.CardView>


</LinearLayout>
