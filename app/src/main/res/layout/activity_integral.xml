<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.activity.fgt.personal.act.Act_SetUpc">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="@color/red3">

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="35dp"
            android:layout_height="38dp"
            android:layout_marginTop="32dp"
            android:padding="10dp"
            android:scaleType="fitXY"
            android:src="@mipmap/img_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="36dp"
            android:text="党员积分"
            android:textColor="@color/white"
            android:textSize="19dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvRight"
            style="@style/text_16_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_title"
            android:layout_alignParentRight="true"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:paddingLeft="@dimen/dip_20"
            android:paddingRight="@dimen/dip_10"
            android:text="积分明细" />
    </RelativeLayout>



        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:background="@mipmap/integral1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/interal_jf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        android:layout_weight="1"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="25dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="成长积分"
                        android:textColor="@color/white"
                        android:textSize="20dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="积分规则"
                        android:textColor="@color/grey_color1"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="今日已累计"
                        android:textColor="@color/grey_color1"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/interal_jf2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0积分"
                        android:textColor="@color/red1"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dip_1"
                    android:layout_marginTop="10dp"
                    android:background="#10000000" />


            <LinearLayout
               android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:textSize="16sp"
                        android:textColor="@color/grey_color1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="登录"/>
                    <TextView
                        android:layout_marginTop="5dp"
                        android:textSize="14sp"
                        android:textColor="@color/grey_color3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5分/每日首次登录"/>

                </LinearLayout>
                <TextView
                    android:id="@+id/intergral_text3"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@mipmap/integral2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="去完成"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dip_1"
                android:layout_marginTop="10dp"
                android:background="#10000000" />
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:textSize="16sp"
                            android:textColor="@color/grey_color1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="按期报送工作周报"/>
                        <TextView
                            android:layout_marginTop="5dp"
                            android:textSize="14sp"
                            android:textColor="@color/grey_color3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10分/每期上传并完成审核"/>

                    </LinearLayout>
                    <TextView
                        android:id="@+id/intergral_text4"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:background="@mipmap/integral2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="去完成"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dip_1"
                    android:layout_marginTop="10dp"
                    android:background="#10000000" />
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:textSize="16sp"
                            android:textColor="@color/grey_color1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="上传学习心得"/>
                        <TextView
                            android:layout_marginTop="5dp"
                            android:textSize="14sp"
                            android:textColor="@color/grey_color3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10分/每次上传并完成审核"/>

                    </LinearLayout>
                    <TextView
                        android:id="@+id/intergral_text5"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/grey_color1"
                        android:background="@mipmap/integral3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dip_1"
                    android:layout_marginTop="10dp"
                    android:background="#10000000" />
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:textSize="16sp"
                            android:textColor="@color/grey_color1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="按时缴纳党费"/>
                        <TextView
                            android:layout_marginTop="5dp"
                            android:textSize="14sp"
                            android:textColor="@color/grey_color3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10分/每月按时缴费"/>

                    </LinearLayout>
                    <TextView
                        android:id="@+id/intergral_text6"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:background="@mipmap/integral2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="去完成"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dip_1"
                    android:layout_marginTop="10dp"
                    android:background="#10000000" />
            </LinearLayout>
        </LinearLayout>

</LinearLayout>