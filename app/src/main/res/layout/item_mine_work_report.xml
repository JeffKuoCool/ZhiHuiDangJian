<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingLeft="@dimen/dip_10"
    android:paddingRight="@dimen/dip_10"
    android:paddingBottom="@dimen/dip_3"
    android:paddingTop="@dimen/dip_3">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dip_12"
                style="@style/text_14"
                android:text="2019.8.24"/>

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginRight="@dimen/dip_12"
                android:layout_marginLeft="60dp"
                android:lines="1"
                android:ellipsize="end"
                android:text="关于不忘初心，牢记使命的工作报告"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>